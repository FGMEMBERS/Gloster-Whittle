<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>interior.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>interieur</object-name>
    <object-name>inttour</object-name>
    <object-name>intcanopy</object-name>

    <!-- Objets transparents -->
    <object-name>intvitres</object-name>
    <object-name>intverriere</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>intvitres</object-name>
    <object-name>intverriere</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>intvitres</object-name>
    <object-name>intverriere</object-name>
  </animation>

  <!-- Pilote -->
  <model>
    <path>Aircraft/Gloster-Whittle/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -2.060 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.178 </z-m>
    </offsets>
  </model>

  <!-- Tableau de bord -->
  <model>
    <path>Aircraft/Gloster-Whittle/Models/Interior/Panels/panel.xml</path>
    <offsets>
      <x-m> -2.669 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.186 </z-m>
    </offsets>
  </model>

  <!-- Canopy -->
  <animation>
    <name>IntAllCanopy</name>
    <object-name>intcanopy</object-name>
    <object-name>intverriere</object-name>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>IntAllCanopy</object-name>
    <property>instrumentation/doors/crew/position-norm</property>
    <factor> 0.64 </factor>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>IntAllCanopy</object-name>
    <property>instrumentation/doors/crew/position-norm</property>
    <factor> 0.045 </factor>
    <axis>
      <x> 0 </x>
      <y> 0 </y>
      <z> 1 </z>
    </axis>
  </animation>

</PropertyList>

